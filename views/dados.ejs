                                <th>
                                    <button id="cancel" class="btn btn-secondary btn-block "><i class="fas fa-times"></i>&nbsp
                                Cancelar</button>
                                </th>
                                <th>
                                    <button id="confirm" class="btn btn-danger btn-block "><i class="fas fa-frown"></i>&nbsp
                                Remover</a>
