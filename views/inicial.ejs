<%- include('partes/head') %>
    <link rel='stylesheet' type='text/css' media='screen' href='/css/inicial.css'>
    <script src="/javascript/inicial.js"></script>

    </head>

    <body>
        <div class="body-content">
            <%- include('partes/navegador') %>

                <div id="topo">
                    <!--Carousel Wrapper-->
                    <div id="carouselExampleControls" class="carousel slide slider" data-ride="carousel">
                        <div class="carousel-inner slider">
                            <div class="carousel-item active">
                                <img class="d-block w-100" src="/images/slide1.jpg" alt="First slide">
                            </div>
                            <div class="carousel-item">
                                <img class="d-block w-100" src="/images/slide2.jpg" alt="Second slide">
                            </div>
                            <div class="carousel-item">
                                <img class="d-block w-100" src="/images/slide3.jpg" alt="Third slide">
                            </div>
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                    <div class="card shadow search ">
                        <div class="card-body">
                            <h2>Conheça nossos carros!</h2>
                            <form action="/" method="GET">
                                <div class="input-group input-group-lg mb-2">
                                    <input type="text" name="busca" class="form-control" placeholder="Digite o modelo ou a marca do veículo..." aria-label="Recipient's username" aria-describedby="basic-addon2">
                                    <div class="input-group-append">
                                        <button class="btn btn-outline-danger" type="input">Buscar</button>
                                    </div>
                                </div>
                            </form>
                            <a class="link" href="/buscar"><i class="fas fa-sliders-h"></i>&nbsp;Busca Avançada</a>
                        </div>
                    </div>

                </div>
        </div>
        <%- include('partes/rodape') %>
    </body>


    </html>